function create_plot_observables(y,seriesnames,figname,print_figs,figtitle)
% y = ny x T

this_code = mfilename;
max_no_inputs = nargin(this_code);
if nargin < max_no_inputs %no shock specified
    dt = 0;
    print_figs = 0;
else
    dt= dt+ndrop;
end

% Paths
[current_dir, ~, ~,~,~,figpath] = add_paths;
% Plot configs
[fs, lw] = plot_configs;
linestyles = {'-','-','--', ':'};

figure
set(gcf,'color','w'); % sets white background color
set(gcf, 'Position', get(0, 'Screensize')); % sets the figure fullscreen


if nargin < 4
    print_figs=0;
end
if print_figs ==1
    disp(figname)
    cd(figpath)
    export_fig(figname)
    cd(current_dir)
    close
end